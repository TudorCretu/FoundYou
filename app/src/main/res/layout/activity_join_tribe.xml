<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tudorc.foundyou.JoinTribeActivity">

    <TextView
        android:id="@+id/enter_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your invite code"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.502" />


    <EditText
        android:id="@+id/code1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:ems="1"
        android:inputType="textCapSentences"
        android:lines="1"
        android:maxLength="1"
        android:maxLines="1"
        android:minLines="1"
        app:layout_constraintBaseline_toBaselineOf="@+id/code2"
        app:layout_constraintRight_toLeftOf="@+id/code2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="80dp" />

    <EditText
        android:id="@+id/code2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="1"
        android:gravity="center"
        android:inputType="textCapSentences"
        android:lines="1"
        android:maxLength="1"
        android:maxLines="1"
        android:minLines="1"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView5"
        app:layout_constraintRight_toLeftOf="@+id/textView5"
        app:layout_constraintLeft_toRightOf="@+id/code1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="1"
        android:text="-"
        android:gravity="center"
        app:layout_constraintBaseline_toBaselineOf="@+id/code3"
        android:id="@+id/textView5"
        app:layout_constraintRight_toLeftOf="@+id/code3"
        app:layout_constraintLeft_toRightOf="@+id/code2" />

    <EditText
        android:id="@+id/code3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="1"
        android:gravity="center"
        android:inputType="textCapSentences"
        android:lines="1"
        android:maxLength="1"
        android:maxLines="1"
        android:minLines="1"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/enter_code"
        app:layout_constraintRight_toLeftOf="@+id/code4"
        app:layout_constraintLeft_toRightOf="@+id/textView5" />

    <EditText
        android:id="@+id/code4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="1"
        android:gravity="center"
        android:inputType="textCapSentences"
        android:lines="1"
        android:maxLength="1"
        android:maxLines="1"
        android:minLines="1"
        app:layout_constraintBaseline_toBaselineOf="@+id/code3"
        app:layout_constraintLeft_toRightOf="@+id/code3"
        app:layout_constraintRight_toLeftOf="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="1"
        android:text="-"
        android:gravity="center"
        app:layout_constraintBaseline_toBaselineOf="@+id/code4"
        android:id="@+id/textView4"
        app:layout_constraintLeft_toRightOf="@+id/code4"
        app:layout_constraintRight_toLeftOf="@+id/code5" />

    <EditText
        android:id="@+id/code5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="1"
        android:gravity="center"
        android:inputType="textCapSentences"
        android:lines="1"
        android:maxLength="1"
        android:maxLines="1"
        android:minLines="1"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView4"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        app:layout_constraintRight_toLeftOf="@+id/code6" />

    <EditText
        android:id="@+id/code6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="1"
        android:gravity="center"
        android:inputType="textCapSentences"
        android:lines="1"
        android:maxLength="1"
        android:maxLines="1"
        android:minLines="1"
        app:layout_constraintBaseline_toBaselineOf="@+id/code5"
        app:layout_constraintLeft_toRightOf="@+id/code5"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="80dp"
        android:layout_marginEnd="80dp" />

    <TextView
        android:id="@+id/ask_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Ask the Tribe Chief for their code"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/code3" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:gravity="center"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/ask_code"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
